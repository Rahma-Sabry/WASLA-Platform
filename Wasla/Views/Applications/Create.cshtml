@model Wasla.Models.Application

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header text-white" style="background-color: #005792;">
            <h3 class="mb-0"><i class="bi bi-journal-plus"></i> Create Application</h3>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                @* Hidden EmployeeId *@
                <div class="form-group d-none">
                    <label asp-for="EmployeeId" class="control-label"></label>
                    <input asp-for="EmployeeId" class="form-control" value="@Context.Request.Query["EmployeeId"]" />
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                @* Hidden JobId *@
                <div class="form-group d-none">
                    <label asp-for="JobId" class="control-label"></label>
                    <input asp-for="JobId" class="form-control" value="@Context.Request.Query["JobId"]" />
                    <span asp-validation-for="JobId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ApplyDate" class="form-label"></label>
                    <input asp-for="ApplyDate" class="form-control" />
                    <span asp-validation-for="ApplyDate" class="text-danger"></span>
                </div>

                <div class="form-group text-end">
                    <input type="submit" value="Submit Application" class="btn btn-success" />
                </div>
            </form>
        </div>

        <div class="card-footer text-end">
            <a asp-controller="Jobs" asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
