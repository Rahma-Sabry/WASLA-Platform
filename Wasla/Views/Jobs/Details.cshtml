@model Wasla.Models.Job

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header text-white" style="background-color: #005792;">
            <h3 class="mb-0"><i class="bi bi-info-circle-fill"></i> Job Details</h3>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-secondary">Job Title</dt>
                <dd class="col-sm-9 fw-bold">@Model.JobTitle</dd>

                <dt class="col-sm-3 text-secondary">Recruiter</dt>
                <dd class="col-sm-9">@Model.Recruiter.CompanyName</dd>

                <dt class="col-sm-3 text-secondary">Requirements</dt>
                <dd class="col-sm-9">@Model.Requirements</dd>

                <dt class="col-sm-3 text-secondary">Salary</dt>
                <dd class="col-sm-9">@Model.Salary.ToString("C")</dd>

                <dt class="col-sm-3 text-secondary">Type</dt>
                <dd class="col-sm-9">@Model.JobType.TypeName</dd>

                <dt class="col-sm-3 text-secondary">Field</dt>
                <dd class="col-sm-9">@Model.Field</dd>

                <dt class="col-sm-3 text-secondary">Expire Date</dt>
                <dd class="col-sm-9">@Model.ExpireDate?.ToString("d")</dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.JobId" class="btn btn-outline-primary me-2">
                <i class="bi bi-pencil-fill"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
