@model Wasla.Models.Job

@{
    ViewData["Title"] = "Job Details";
}

<h2>Job Details</h2>

<div>
    <h4>@Model.JobTitle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Recruiter</dt>
        <dd class="col-sm-10">@Model.Recruiter?.Name</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.JobType?.Name</dd>

        <dt class="col-sm-2">Field</dt>
        <dd class="col-sm-10">@Model.Field</dd>

        <dt class="col-sm-2">Requirements</dt>
        <dd class="col-sm-10">@Model.Requirements</dd>

        <dt class="col-sm-2">Salary</dt>
        <dd class="col-sm-10">@Model.Salary</dd>

        <dt class="col-sm-2">Expire Date</dt>
        <dd class="col-sm-10">@Model.ExpireDate?.ToShortDateString()</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.JobId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
