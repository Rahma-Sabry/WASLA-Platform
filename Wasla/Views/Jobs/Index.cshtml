@model IEnumerable<Wasla.Models.Job>

@{
    ViewData["Title"] = "Jobs";
}

<h1>Jobs</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Job</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Recruiter</th>
            <th>Type</th>
            <th>Salary</th>
            <th>Expires</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.JobTitle</td>
                <td>@item.Recruiter.CompanyName</td>
                <td>@item.JobType.TypeName</td>
                <td>@item.Salary.ToString("C")</td>
                <td>@item.ExpireDate?.ToString("d")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.JobId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.JobId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.JobId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
