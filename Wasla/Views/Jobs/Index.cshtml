@model IEnumerable<Wasla.Models.Job>

@{
    ViewData["Title"] = "Jobs";
}

<h2>Jobs</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Job</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Job Title</th>
            <th>Recruiter</th>
            <th>Type</th>
            <th>Field</th>
            <th>Salary</th>
            <th>Expire Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.JobTitle</td>
            <td>@item.Recruiter?.Name</td>
            <td>@item.JobType?.Name</td>
            <td>@item.Field</td>
            <td>@item.Salary</td>
            <td>@item.ExpireDate?.ToShortDateString()</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.JobId">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.JobId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.JobId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
