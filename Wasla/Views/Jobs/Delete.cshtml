@model Wasla.Models.Job

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header text-white" style="background-color: #005792;">
                    <h4 class="mb-0">
                        <i class="bi bi-briefcase-fill"></i> Job Details
                    </h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">Job Title</dt>
                        <dd class="col-sm-8">@Model.JobTitle</dd>

                        <dt class="col-sm-4 fw-bold">Recruiter</dt>
                        <dd class="col-sm-8">@Model.Recruiter?.CompanyName</dd>

                        <dt class="col-sm-4 fw-bold">Requirements</dt>
                        <dd class="col-sm-8">@Model.Requirements</dd>

                        <dt class="col-sm-4 fw-bold">Salary</dt>
                        <dd class="col-sm-8">@Model.Salary.ToString("C")</dd>

                        <dt class="col-sm-4 fw-bold">Type</dt>
                        <dd class="col-sm-8">@Model.JobType?.TypeName</dd>

                        <dt class="col-sm-4 fw-bold">Field</dt>
                        <dd class="col-sm-8">@Model.Field</dd>

                        <dt class="col-sm-4 fw-bold">Expire Date</dt>
                        <dd class="col-sm-8">@Model.ExpireDate?.ToString("d")</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this job?');">
                        <input type="hidden" asp-for="JobId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
