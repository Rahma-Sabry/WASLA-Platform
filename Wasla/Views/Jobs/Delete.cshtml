@model Wasla.Models.Job

@{
    ViewData["Title"] = "Details";
}

<h1>Job Details</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">Job Title</dt>
    <dd class="col-sm-10">@Model.JobTitle</dd>

    <dt class="col-sm-2">Recruiter</dt>
    <dd class="col-sm-10">@Model.Recruiter.CompanyName</dd>

    <dt class="col-sm-2">Requirements</dt>
    <dd class="col-sm-10">@Model.Requirements</dd>

    <dt class="col-sm-2">Salary</dt>
    <dd class="col-sm-10">@Model.Salary.ToString("C")</dd>

    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.JobType.TypeName</dd>

    <dt class="col-sm-2">Field</dt>
    <dd class="col-sm-10">@Model.Field</dd>

    <dt class="col-sm-2">Expire Date</dt>
    <dd class="col-sm-10">@Model.ExpireDate?.ToString("d")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="JobId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>
