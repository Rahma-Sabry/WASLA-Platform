@model Wasla.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>

<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Resume</dt>
        <dd class="col-sm-10">
            <a href="@Model.Resume" target="_blank">View Resume</a>
        </dd>

        <dt class="col-sm-2">Cover Letter</dt>
        <dd class="col-sm-10">
            <a href="@Model.CoverLetter" target="_blank">View Cover Letter</a>
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
