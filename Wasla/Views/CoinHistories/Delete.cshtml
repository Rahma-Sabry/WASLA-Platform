@model Wasla.Models.CoinHistory

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Coin History Entry</h1>
<h3>Are you sure you want to delete this?</h3>
<hr />

<dl class="row">
    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">@Model.User.FirstName @Model.User.LastName</dd>

    <dt class="col-sm-2">Time</dt>
    <dd class="col-sm-10">@Model.Time.ToString("g")</dd>

    <dt class="col-sm-2">Process Type</dt>
    <dd class="col-sm-10">@Model.ProcessType.ProcessName </dd>

    <dt class="col-sm-2">Amount</dt>
    <dd class="col-sm-10">@Model.Amount</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Time" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
