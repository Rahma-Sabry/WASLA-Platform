@model Wasla.Models.EmployeeSkill

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Employee Skill</h1>
<h3>Are you sure you want to delete this?</h3>
<hr />

<dl class="row">
    <dt class="col-sm-2">Employee</dt>
    <dd class="col-sm-10">@Model.Employee.FirstName @Model.Employee.LastName</dd>

    <dt class="col-sm-2">Skill</dt>
    <dd class="col-sm-10">@Model.Skill.SkillName</dd>

    <dt class="col-sm-2">Years of Experience</dt>
    <dd class="col-sm-10">@Model.YOE</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="EmployeeId" />
    <input type="hidden" asp-for="SkillId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
