@model Wasla.Models.Recruiter

@{
    ViewData["Title"] = "Create";
}
@{
    var dobString = Context.Request.Query["DateOfBirth"].ToString();
    DateTime? dob = null;

    if (DateTime.TryParse(dobString, out var parsedDob))
    {
        dob = parsedDob;
    }
}

<h1>Create</h1>

<h4>Recruiter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyDesc" class="control-label"></label>
                <input asp-for="CompanyDesc" class="form-control" />
                <span asp-validation-for="CompanyDesc" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" value="@Context.Request.Query["FirstName"]" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" value="@Context.Request.Query["LastName"]" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" value="@Context.Request.Query["Email"]" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none">
                <label asp-for="SSN" class="control-label"></label>
                <input asp-for="SSN" value="@Context.Request.Query["SSN"]" class="form-control" />
                <span asp-validation-for="SSN" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" value="@(dob?.ToString("yyyy-MM-dd"))" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
