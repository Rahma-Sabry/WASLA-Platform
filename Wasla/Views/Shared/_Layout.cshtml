<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wasla</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Wasla.styles.css" asp-append-version="true" />

    <style>
        .navbar-custom {
            background-color: #005792;
        }
        .navbar-custom .nav-link,
        .navbar-custom .navbar-brand{
                color: #ffffff !important;
        }
        .navbar-custom .dropdown-item {
                color: #005792 !important;
        }
        .navbar-custom .nav-link:hover,
        .navbar-custom .dropdown-item:hover {
            color: #ffd700 !important;
        }
        .footer-custom {
            background-color: #002b45;
            color: #cccccc;
        }
        .footer-custom a {
            color: #ffc107;
        }
        .footer-custom a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom border-bottom shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-rocket-takeoff-fill me-1"></i>Wasla
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon bg-light"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- Entities Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Entities</a>
                            <ul class="dropdown-menu bg-light">
                                <li><a class="dropdown-item" asp-controller="Employees" asp-action="Index">Employees</a></li>
                                <li><a class="dropdown-item" asp-controller="Recruiters" asp-action="Index">Recruiters</a></li>
                                <li><a class="dropdown-item" asp-controller="Jobs" asp-action="Index">Jobs</a></li>
                                <li><a class="dropdown-item" asp-controller="Educations" asp-action="Index">Educations</a></li>
                                <li><a class="dropdown-item" asp-controller="Skills" asp-action="Index">Skills</a></li>
                                <li><a class="dropdown-item" asp-controller="Degree" asp-action="Index">Degree</a></li>
                                <li><a class="dropdown-item" asp-controller="EmployeeSkills" asp-action="Index">Employee Skills</a></li>
                                <li><a class="dropdown-item" asp-controller="Applications" asp-action="Index">Applications</a></li>
                            </ul>
                        </li>

                        <!-- Settings Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Settings</a>
                            <ul class="dropdown-menu bg-light">
                                <li><a class="dropdown-item" asp-controller="CoinHistories" asp-action="Index">Coin History</a></li>
                                <li><a class="dropdown-item" asp-controller="ProcessTypes" asp-action="Index">Process Types</a></li>
                                <li><a class="dropdown-item" asp-controller="JobTypes" asp-action="Index">Job Types</a></li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Accounts" asp-action="Index">Accounts</a></li>
                                }
                            </ul>
                        </li>
                    </ul>

                    <!-- Auth Links -->
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3">
                                    <i class="bi bi-person-circle"></i> <span class="badge bg-warning text-dark">@User.Identity.Name</span>
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Accounts" asp-action="Signout">
                                    <i class="bi bi-box-arrow-right"></i> Sign out
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Accounts" asp-action="Register">
                                    <i class="bi bi-person-plus-fill"></i> Register
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Accounts" asp-action="Login" asp-route-ReturnUrl="@Context.Request.Path">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom py-3 mt-auto">
        <div class="container text-center">
            &copy; 2025 - Wasla | <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>