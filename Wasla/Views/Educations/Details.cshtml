@model Wasla.Models.Education
@{
    ViewData["Title"] = "Details";
}

<h1>Education Details</h1>

<dl class="row">
    <dt class="col-sm-2">University Name</dt>
    <dd class="col-sm-10">@Model.UniversityName</dd>

    <dt class="col-sm-2">Start Date</dt>
    <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

    <dt class="col-sm-2">End Date</dt>
    <dd class="col-sm-10">@(Model.EndDate?.ToShortDateString() ?? "—")</dd>

    <dt class="col-sm-2">Degree</dt>
    <dd class="col-sm-10">@Model.DegreeType.DegreeName</dd>

    <dt class="col-sm-2">Employee</dt>
    <dd class="col-sm-10">@Model.Employee.FullName</dd>
</dl>

<p>
    <a asp-action="Edit"
       asp-route-employeeId="@Model.EmployeeId"
       asp-route-startDate="@Model.StartDate.ToString("o")">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
