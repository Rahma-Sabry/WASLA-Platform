@model IEnumerable<Wasla.Models.Education>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UniversityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DegreeType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UniversityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeType.DegreeName)
            </td>
            <td>
                    <a asp-action="Edit"
                       asp-route-EmployeeId="@item.EmployeeId"
                       asp-route-StartDate="@item.StartDate.ToString("o")">Edit</a>
                    <a asp-action="Delete"
                       asp-route-EmployeeId="@item.EmployeeId"
                       asp-route-StartDate="@item.StartDate.ToString("o")">Delete</a>| |
                    <a asp-action="Details" >Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
